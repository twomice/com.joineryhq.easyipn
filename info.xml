<?xml version="1.0"?>
<extension key="com.joineryhq.easyipn" type="module">
  <file>easyipn</file>
  <name>Easy IPN URL</name>
  <description>Easily display the IPN Notification URL for any Payment Processor</description>
  <license>GPL-3.0</license>
  <maintainer>
    <author>Joinery</author>
    <email>info@joineryhq.com</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://civicrm.org/extensions/easy-ipn-url</url>
    <url desc="Documentation">https://github.com/twomice/com.joineryhq.easyipn</url>
    <url desc="Support">https://github.com/twomice/com.joineryhq.easyipn/issues</url>
    <url desc="Licensing">http://www.gnu.org/licenses/gpl-3.0.html</url>
  </urls>
  <releaseDate>2025-06-17</releaseDate>
  <version>1.0.1</version>
  <develStage>stable</develStage>
  <compatibility>
    <ver>5.45</ver>
  </compatibility>
  <comments>Adds a link labeled "Notification URL" in the actions menu of each Payment Processor listed at civicrm/admin/paymentProcessor.</comments>
  <classloader>
    <psr4 prefix="Civi\" path="Civi"/>
    <psr0 prefix="CRM_" path="."/>
  </classloader>
  <civix>
    <namespace>CRM/Easyipn</namespace>
    <format>24.09.1</format>
  </civix>
  <mixins>
    <mixin>menu-xml@1.0.0</mixin>
    <mixin>smarty-v2@1.0.3</mixin>
    <mixin>entity-types-php@2.0.0</mixin>
  </mixins>
</extension>
